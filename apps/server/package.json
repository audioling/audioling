{
    "name": "@audioling/server",
    "version": "0.1.0",
    "private": false,
    "description": "",
    "license": "GPL-3.0-only",
    "author": "",
    "type": "module",
    "scripts": {
        "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
        "build:desktop": "bun build --compile --minify ./src/index.ts ./src/image-worker.ts --outfile ./dist/audioling-server",
        "build:desktop-linux-arm64": "bun build --target=bun-linux-arm64 --compile --minify ./src/index.ts ./src/image-worker.ts --outfile ./dist/audioling-server",
        "build:desktop-linux-x64": "bun build --target=bun-linux-x64-modern --compile --minify ./src/index.ts ./src/image-worker.ts --outfile ./dist/audioling-server",
        "build:desktop-macos-arm64": "bun build --target=bun-darwin-arm64 --compile --minify ./src/index.ts ./src/image-worker.ts --outfile ./dist/audioling-server",
        "build:desktop-macos-x64": "bun build --target=bun-darwin-x64 --compile --minify ./src/index.ts ./src/image-worker.ts --outfile ./dist/audioling-server",
        "build:desktop-windows": "bun build --target=bun-windows-x64-modern --compile --minify ./src/index.ts ./src/image-worker.ts --outfile ./dist/audioling-server.exe",
        "db:init": "pwsh -c 'Remove-Item ./app.db' && pnpm run db:push",
        "dev": "cross-env NODE_ENV=development APP_LOG_LEVEL=debug bun --watch run ./src/index.ts",
        "dev:trace": "cross-env NODE_ENV=development APP_LOG_LEVEL=trace bun --watch run ./src/index.ts",
        "lint": "eslint . --ext .js,.ts --fix"
    },
    "dependencies": {
        "@audioling/open-subsonic-api-client": "4.0.2",
        "@hono/zod-openapi": "^0.18.3",
        "@paralleldrive/cuid2": "^2.2.2",
        "@repo/logger": "workspace:*",
        "@repo/shared-types": "workspace:*",
        "@scalar/hono-api-reference": "^0.5.170",
        "axios": "^1.7.9",
        "bcryptjs": "^2.4.3",
        "configstore": "^7.0.0",
        "dayjs": "^1.11.13",
        "hono": "^4.6.20",
        "jsonata": "^2.0.6",
        "lodash": "^4.17.21",
        "md5": "^2.3.0",
        "normalize-text": "^2.5.0",
        "safe-stable-stringify": "^2.5.0",
        "zod": "^3.24.1",
        "zod-validation-error": "^3.4.0"
    },
    "devDependencies": {
        "@repo/eslint-config-internal": "workspace:*",
        "@types/bcryptjs": "^2.4.6",
        "@types/configstore": "^6.0.2",
        "@types/lodash": "^4.17.15",
        "@types/md5": "^2.3.5",
        "@types/node": "^22.13.0",
        "cross-env": "^7.0.3",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.7.3"
    }
}
