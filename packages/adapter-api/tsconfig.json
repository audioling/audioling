{
    "compilerOptions": {
        "target": "es2022",
        "moduleDetection": "force",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "types": [
            "../../env.d.ts"
        ],
        "allowArbitraryExtensions": true,
        "allowJs": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
